<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculadora.MainActivity" >

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etRes"
        android:layout_below="@+id/etRes"
        android:layout_marginTop="57dp"
        android:text="9" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnNueve"
        android:layout_alignBottom="@+id/btnNueve"
        android:layout_toRightOf="@+id/btnNueve"
        android:text="8" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnOcho"
        android:layout_alignBottom="@+id/btnOcho"
        android:layout_toRightOf="@+id/btnOcho"
        android:text="7" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNueve"
        android:layout_toLeftOf="@+id/btnOcho"
        android:text="6" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSeis"
        android:layout_alignBottom="@+id/btnSeis"
        android:layout_toRightOf="@+id/btnSeis"
        android:text="5" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCinco"
        android:layout_alignBottom="@+id/btnCinco"
        android:layout_alignLeft="@+id/btnSiete"
        android:text="4" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSeis"
        android:layout_toLeftOf="@+id/btnCinco"
        android:text="3" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnTres"
        android:layout_alignBottom="@+id/btnTres"
        android:layout_toLeftOf="@+id/btnCuatro"
        android:text="2" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDos"
        android:layout_alignBottom="@+id/btnDos"
        android:layout_toRightOf="@+id/btnDos"
        android:text="1" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDos"
        android:layout_toLeftOf="@+id/btnUno"
        android:text="0" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCuatro"
        android:layout_toRightOf="@+id/btnSiete"
        android:text="C" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBorrar"
        android:layout_below="@+id/btnBorrar"
        android:text="+" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCero"
        android:layout_toRightOf="@+id/btnUno"
        android:text="-" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCero"
        android:layout_alignBottom="@+id/btnCero"
        android:layout_toLeftOf="@+id/btnCero"
        android:text="=" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUno"
        android:layout_toLeftOf="@+id/btnResta"
        android:text=":" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnResta"
        android:layout_below="@+id/btnResta"
        android:text="x" />

    <EditText
        android:id="@+id/etRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etRes"
        android:layout_below="@+id/etRes"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>